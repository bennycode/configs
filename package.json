{
  "devDependencies": {
    "@evilmartians/lefthook": "1.3.6",
    "@types/node": "18.15.3",
    "lerna": "5.6.2",
    "prettier": "2.8.4",
    "pretty-quick": "3.1.3",
    "ts-node": "10.9.1",
    "typescript": "5.0.2"
  },
  "name": "@tstv/tsconfigs",
  "private": true,
  "scripts": {
    "boot": "lerna bootstrap --reject-cycles",
    "clean": "lerna run clean --parallel",
    "dist": "lerna run dist",
    "fix": "prettier --ignore-path .gitignore \"**/*.{md,json,html,ts}\" --write",
    "prerelease": "yarn fix",
    "release": "yarn install && yarn dist && lerna publish && yarn clean",
    "test": "lerna run --no-sort --concurrency 8 test"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
