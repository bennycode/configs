{
  "devDependencies": {
    "@evilmartians/lefthook": "1.4.8",
    "@types/node": "18.15.11",
    "conventional-changelog-conventionalcommits": "6.1.0",
    "lerna": "7.1.4",
    "prettier": "3.0.0",
    "ts-node": "10.9.1",
    "typescript": "5.1.6"
  },
  "name": "@tstv/tsconfigs",
  "private": true,
  "scripts": {
    "boot": "lerna bootstrap --reject-cycles",
    "clean": "lerna run clean --parallel",
    "dist": "lerna run dist",
    "fix": "prettier --ignore-path .gitignore \"**/*.{md,json,html,ts}\" --write",
    "prerelease": "yarn fix",
    "release": "yarn install && yarn dist && lerna publish && yarn clean",
    "test": "lerna run --no-sort --concurrency 8 test"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
